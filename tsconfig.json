{
  "compilerOptions": {
    "outDir": "out",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "files.exclude": {
    "./src/**/*.js": { "when": "$(basename).ts" }
  },
  "watchFile": "useFsEvents",
  "watchDirectory": "useFsEvents",
  "excludeDirectories": ["**/node_modules", "build"]
}
